<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="@style/HyperlinkGray">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="머니관리"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:id="@+id/top_btn"
        android:background="@drawable/find_info_background">

        <Button
            android:id="@+id/money_plus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/profile_background"
            android:stateListAnimator="@null"
            android:text="충전하기"
            android:textColor="#ffffff"
            android:textSize="15dp" />

        <Button
            android:id="@+id/money_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/find_info_background"
            android:layout_weight="1"
            android:stateListAnimator="@null"
            android:text="송금하기"
            android:textColor="#666666"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/money_minus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/find_info_background"
            android:layout_weight="1"
            android:stateListAnimator="@null"
            android:text="출금하기"
            android:textColor="#666666"
            android:textSize="15dp"
            />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/plus_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제수단"
            android:textColor="#000000"
            android:textSize="16dp"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner"
            android:text="무통장 입금"
            android:textSize="18dp"
            android:inputType="textCapWords"
            android:gravity="center|start"
            android:paddingStart="15dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="충전할 머니"
            android:textColor="#000000"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/money_plus_edit"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner"
            android:gravity="center|start"
            android:hint="충전할 머니 금액을 입력하세요"
            android:inputType="number"
            android:paddingStart="15dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="충전 후 머니 잔액:"
                android:textColor="#666666"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/result_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="₩ "
                android:textColor="#666666"
                android:textStyle="bold"
                android:textSize="15dp"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/plus_btn"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/round_corner_gray"
            android:text="충전하기"
            android:textColor="#ffff"
            android:textSize="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/send_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 선택"
            android:textColor="#000000"
            android:textSize="16dp"/>
        <EditText
            android:id="@+id/send_who"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner"
            android:gravity="center|start"
            android:hint="송금할 대상의 id를 입력하세요"
            android:inputType="textCapWords"
            android:paddingStart="15dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="18dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner">


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="송금할 머니"
                android:textColor="#000000"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/send_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                android:text="잔액이 부족합니다."
                android:textColor="#F44336"
                android:textSize="16dp" />
        </LinearLayout>


        <EditText
            android:id="@+id/money_send_edit"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner"
            android:gravity="center|start"
            android:hint="송금할 머니 금액을 입력하세요"
            android:inputType="number"
            android:paddingStart="15dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="머니 잔액:"
                android:textColor="#666666"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/result_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="₩ "
                android:textColor="#666666"
                android:textStyle="bold"
                android:textSize="15dp"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/send_btn"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dip"
            android:background="@drawable/round_corner_gray"
            android:text="송금하기"
            android:textColor="#ffff"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/send_second_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center"
        android:visibility="gone"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile"
            android:layout_marginTop="30dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/basic"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/second_send_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닉네임"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#4946E7"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="님에게"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/second_send_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₩"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="을 송금하시겠습니까?"
                android:textColor="#000000"
                android:textSize="22dp"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="송금 후 잔액:"
                android:textColor="#666666"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/result_send2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="₩ "
                android:textColor="#666666"
                android:textStyle="bold"
                android:textSize="15dp"/>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/send_btn2"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dip"
            android:background="@drawable/round_corner_blue"
            android:text="송금하기"
            android:textColor="#ffff"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/minus_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:visibility="gone"
        >
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계좌 입력"
            android:textColor="#000000"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/minus_bank"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_corner"
            android:gravity="center|start"
            android:hint="은행을 선택하세요"
            android:inputType="textCapWords"
            android:paddingStart="15dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/minus_edit_num"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner"
            android:hint="계좌번호를 입력하세요"
            android:textSize="18dp"
            android:inputType="textCapWords"
            android:gravity="center|start"
            android:paddingStart="15dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="출금할 머니"
                android:textColor="#000000"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/minus_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:visibility="gone"
                android:text="잔액이 부족합니다."
                android:textColor="#F44336"
                android:textSize="16dp" />
        </LinearLayout>
        <EditText
            android:id="@+id/minus_edit_money"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_corner"
            android:hint="출금할 머니 금액을 입력하세요"
            android:textSize="18dp"
            android:inputType="number"
            android:gravity="center|start"
            android:paddingStart="15dp"
            android:textColor="#000000"
            android:textColorHint="#999999"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="머니 잔액:"
                android:textColor="#666666"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/result_minus"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginStart="10dp"
                android:text="₩ "
                android:textColor="#666666"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/minus_btn"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dip"
            android:background="@drawable/round_corner_gray"
            android:text="출금하기"
            android:textColor="#ffff"
            android:textSize="16dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/final_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:gravity="center"
        android:visibility="gone"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="180dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/icon_complete"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/final_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="머니 충전 완료"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/final_tx2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="머니 충전이 완료되었습니다."
                android:textColor="#666666"
                android:textSize="15dp"/>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/money_final"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dip"
            android:background="@drawable/round_corner_blue"
            android:text="처음으로"
            android:textColor="#ffff"
            android:textSize="16dp"
            />
    </LinearLayout>

</LinearLayout>