<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/HyperlinkGray">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="회원정보"
                android:textColor="#000000"
                android:textSize="16dp"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="42dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>
        <FrameLayout
            android:id="@+id/o_FirstFrame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D7F1FA">


            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/option_dialog_background"
                android:layout_gravity="bottom"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/o_profile"
                android:layout_marginTop="30dp"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:src="@drawable/basic"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                />

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">
            <TextView
                android:id="@+id/o_info_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#222222"
                tools:text = "닉네임"
                android:gravity="center"
                android:textStyle="bold"
                />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#E0E0E0"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
               />
            <TextView
                android:id="@+id/o_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="남"
                android:textSize="18dp"
                android:textColor="#666666"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:orientation="horizontal">
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textSize="18dp"
               android:text="평점"
               android:gravity="center"
               android:layout_weight="1"
               android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="총 이용횟수"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#000000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

            <TextView
                android:id="@+id/o_info_reputation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="4.5"
                android:gravity="center"
                android:textColor="#000000"/>

                <TextView
                    android:id="@+id/o_info_reputotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:text="(999+)"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/o_info_total_use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="9,999+"
                    android:gravity="center"
                    android:textColor="#000000"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:textSize="15dp"
                    android:text="회"
                    android:layout_gravity="center"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:background="#F1F1F1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="일정"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/table_inside"
                android:stretchColumns="1,2,3,4,5">
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_inside">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@drawable/table_inside_gray"
                        android:gravity="center"
                        android:stateListAnimator="@null"
                        android:textColor="#000000"
                        android:textSize="18sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_gray"
                        android:stateListAnimator="@null"
                        android:gravity="center"
                        android:text="월"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_gray"
                        android:stateListAnimator="@null"
                        android:gravity="center"
                        android:text="화"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_gray"
                        android:stateListAnimator="@null"
                        android:gravity="center"
                        android:text="수"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_gray"
                        android:stateListAnimator="@null"
                        android:gravity="center"
                        android:text="목"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside_gray"
                        android:stateListAnimator="@null"
                        android:gravity="center"
                        android:text="금"
                        android:textColor="#000000"
                        android:textSize="13sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_inside">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@drawable/table_inside_gray"
                        android:stateListAnimator="@null"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="오전"
                        android:textSize="11sp" />
                    <TextView
                        android:id="@+id/o_info_mon1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/o_info_tues1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/o_info_wen1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/o_info_thurs1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/o_info_fri1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="13sp"/>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_inside">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@drawable/table_inside_gray"
                        android:stateListAnimator="@null"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:text="오후"
                        android:textSize="11sp" />
                    <TextView
                        android:id="@+id/o_info_mon2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/o_info_tues2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/o_info_wen2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/o_info_thurs2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                    <TextView
                        android:id="@+id/o_info_fri2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/table_inside"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textSize="13sp"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:textSize="20dp"
            android:text="차량정보"
            android:textStyle="bold"
            android:textColor="#000000"
            />
            <TextView
                android:id="@+id/o_nocar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#666666"
                android:text="등록된 차량이 없습니다."
            />
        <LinearLayout
            android:id="@+id/o_info_getCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/o_info_carImage"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/o_info_carnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="999구 1234"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_marginStart="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/o_info_carMaker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="기아 "
                        android:textSize="18dp"
                        android:textColor="#666666"/>
                    <TextView
                        android:id="@+id/o_info_carModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="쏘렌토"
                        android:textSize="18dp"
                        android:textColor="#666666"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#E0E0E0"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        />
                    <TextView
                        android:id="@+id/o_info_car_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="suv"
                        android:textSize="18dp"
                        android:textColor="#666666"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>





    </LinearLayout>
</ScrollView>