<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/HyperlinkGray">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_mail_profile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:src="@drawable/basic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          >

        <TextView
            android:id="@+id/item_mail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            tools:text="TITLE" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_star" />

        <TextView
            android:id="@+id/item_mail_ever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:text="평점"
            android:textColor="#000000"
            android:textSize="15dp" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
        <TextView
            android:layout_marginStart="8dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:textSize="15dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
          android:text="신청 요일"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
          <LinearLayout
              android:id="@+id/item_am"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginStart="8dp"

              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AM"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/item_dow_am"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginStart="5dp"/>

          </LinearLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginStart="8dp"
              android:id="@+id/item_pm"
              >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PM"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginStart="5dp"/>

            <TextView
                android:id="@+id/item_dow_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginStart="5dp"/>

          </LinearLayout>
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
</LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp"
      android:gravity="center">
    <Button
        android:id="@+id/item_mail_ok"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:text="채팅"
        android:textColor="#ffffff"
        android:background="@drawable/round_corner_blue"
        />
    <Button
        android:id="@+id/item_mail_no"
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginEnd="10dp"
        android:text="삭제"
        android:textColor="#ffffff"
        android:background="@drawable/round_corner_blue"
        android:backgroundTint="#F44336"
        />
  </LinearLayout>
</LinearLayout>
